<div class="container px-4 py-8 mx-auto ml-1 mr-1 lg:mr-auto lg:ml-auto lg:max-w-[50VW]">
    <div class="overflow-hidden rounded-lg shadow-lg bg-brown-25 dark:bg-neutral-700">
        {{#if (numequal posttype 2)}}
            {{!-- Display title for article posts --}}
            <h3 class="p-4 border-b-2 border-dotted dark:border-brown-25 border-neutral-700">{title}</h3>
        {{/if}}
        {{#if (numequal posttype 3)}}
            {{!-- Display media in media posts --}}
            <div class="postcontent">
                <embed loading="lazy" src="https://via.placeholder.com/400x800" alt="Social Media Post" class="object-contain w-full rounded-t-lg rounded-b-none lg:max-h-[60VH]" />
                <div class="p-4">
                    <p class="text-lg text-neutral-900 dark:text-neutral-100">{{content}}</p>
                </div>
            </div>
        {{/if}}
        <div class="w-full border-b-2 border-dotted dark:border-brown-25 border-neutral-700">
            <a href="{{#unless local}}https://{{author.instance}}{{/unless}}/user/profile/{{author.id}}">
                <div class="flex flex-row p-2 min-w-60 w-max post-author-main justify-evenly">
                    <div class="w-1/5 text-xl">
                        <img loading="lazy" class="w-8 h-8 rounded-full" src="{{#unless local}}https://{{author.instance}}{{/unless}}/user/avatar/{{author.id}}" alt="@">
                    </div>
                    <span class="text-lg">{{author.username}}{{#unless local}}@{{author.instance}}{{/unless}}</span>
                </div>
            </a>
        </div>
        {{#if (numequal posttype 1)}}
            <div class="border-b-2 border-dotted postcontent dark:border-brown-25 border-neutral-700">
                <div class="p-4 bg-brown-100 dark:bg-neutral-800">
                    <p class="text-lg text-neutral-900 dark:text-neutral-100">{{content}}</p>
                </div>
            </div>
        {{/if}}
        <div class="relative w-full ml-1 mr-1">
            <div class="w-full mt-4 mb-4">
                <p class="text-xs">Tags on this post</p>
                <ul class="justify-between w-full p-4 pb-1 ">
                    {{#each tags}}
                        {{!-- Displaying tags -- if any -- in their boxy little list. --}}
                        <li class="inline-block p-1 m-2 text-sm border-2 border-dotted rounded-xl border-neutral-400 dark:border-slate-500 bg-slate-600 text-neutral-200 dark:text-slate-800 dark:bg-slate-400"><a href="/tag/{{this}}" class="text-blue-300 dark:text-blue-900">{{this}}</a></li>
                    {{/each}}
                </ul>
            </div>
            <div class="flex items-center justify-between m-4 min-w-[9rem] w-max float-right h-fit min-h-12">
                <div class="relative w-12 h-full p-1 me-1 ms-1">
                    <!-- Like (Push) -->
                    <div class="absolute w-12 h-12 m-2 text-center text-white align-middle bg-black rounded-full leading-12 hover:text-red-300 bottom-1">
                        {{{button_push}}}
                    </div>
                </div>
                <div class="relative w-12 h-full p-1 me-1 ms-1">
                    <!-- Reply (Comment) -->
                    <div class="absolute w-12 h-12 m-2 text-center text-white align-middle bg-black rounded-full leading-12 hover:text-red-300 bottom-1">
                        {{{button_comment}}}
                    </div>
                </div>
                <div class="relative w-12 h-full p-1 me-1 ms-1">
                    <!-- Repost (Bump) -->
                    <div class="absolute w-12 h-12 m-2 text-center text-white align-middle bg-black leading-12 hover:text-red-300 bottom-1 ">B</div>
                </div>
            </div>
        </div>
    </div>
</div>